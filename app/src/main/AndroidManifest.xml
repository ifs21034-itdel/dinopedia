<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/ic_dinosaur_splash"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_dinosaur_splash"
        android:supportsRtl="true"
        android:theme="@style/Theme.DinoPedia"
        tools:targetApi="31">
        <activity
            android:name=".DetailProfileActivity"
            android:exported="false" />
        <activity
            android:name=".FamiliActivity"
            android:exported="false" />
        <activity
            android:name=".DinosaurActivity"
            android:exported="false" />
        <activity
            android:name=".DetailDinosaurActivity"
            android:exported="false" />
        <activity
            android:name=".DetailFamiliActivity"
            android:exported="false" />

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.App.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>